<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/about_crdroid" >

    <!-- crDroid Changelog -->
    <Preference
        android:key="crdroid_changelog"
        android:icon="@drawable/ic_matrixx_logo"
        android:title="@string/get_matrixx_title"
        android:summary="@string/get_matrixx_summary">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://projectmatrixx.github.io/" />
    </Preference>

    <!-- crDroid Translate -->
    <Preference
        android:key="crdroid_translate"
        android:icon="@drawable/ic_translate"
        android:title="@string/crdroid_translate_title"
        android:summary="@string/crdroid_translate_summary" />

    <!-- crDroid Source -->
    <Preference
        android:key="crdroid_source"
        android:icon="@drawable/ic_source"
        android:title="@string/crdroid_source_title"
        android:summary="@string/crdroid_source_summary" />

    <!-- Matrixx Telegram  -->
    <Preference
        android:key="crdroid_telegram"
        android:icon="@drawable/ic_telegram"
        android:title="@string/crdroid_telegram_title"
        android:summary="@string/crdroid_telegram_summary" />

    <!-- crDroid Drill -->
    <Preference
        android:key="crdroid_drill"
        android:icon="@drawable/ic_drill"
        android:title="@string/drill_title"
        android:summary="@string/drill_summary"
        android:fragment="com.crdroid.settings.fragments.about.Drill" />
</PreferenceScreen>
